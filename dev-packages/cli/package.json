{
  "name": "@eclipse-glsp/cli",
  "version": "2.6.0-next",
  "description": "CLI Tooling & scripts for GLSP components",
  "homepage": "https://www.eclipse.org/glsp/",
  "bugs": "https://github.com/eclipse-glsp/glsp/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse-glsp/glsp.git"
  },
  "license": "(EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0)",
  "author": {
    "name": "Eclipse GLSP"
  },
  "contributors": [
    {
      "name": "Eclipse GLSP Project",
      "email": "glsp-dev@eclipse.org",
      "url": "https://projects.eclipse.org/projects/ecd.glsp"
    }
  ],
  "bin": {
    "glsp": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn check-types && yarn bundle",
    "build:prod": "yarn check-types && yarn bundle --production",
    "bundle": "yarn clean:dist && node esbuild.js",
    "check-types": "tsc",
    "clean": "rimraf  dist tsconfig.tsbuildinfo",
    "clean:dist": "rimraf dist",
    "lint": "eslint --ext .ts,.tsx ./src",
    "lint:ci": "yarn lint -o eslint.xml -f checkstyle",
    "start": "node dist/cli.js",
    "watch": "node esbuild.js --watch",
    "watch:tsc": "tsc --watch"
  },
  "devDependencies": {
    "@eclipse-glsp/config": "2.6.0-next",
    "@types/glob": "^8.1.0",
    "@types/readline-sync": "^1.4.8",
    "@types/semver": "^7.7.1",
    "commander": "^14.0.0",
    "esbuild": "~0.25.9",
    "glob": "^10.4.5",
    "globby": "^14.1.0",
    "readline-sync": "^1.4.10",
    "semver": "^7.7.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
