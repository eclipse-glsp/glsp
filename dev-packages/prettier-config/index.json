{
  "$schema": "http://json.schemastore.org/prettierrc",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "endOfLine": "lf",
  "printWidth": 140,
  "tabWidth": 4,
  "overrides": [
    {
      "files": ["*.json", "*.yml"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2
      }
    }
  ]
}
